# Ghostty Configuration
# Optimized for Neovim compatibility and terminal multiplexing

# Theme
theme = Catppuccin Macchiato

# Font Configuration
font-family = "BlexMono Nerd Font"
font-size = 14
font-feature = +liga
font-feature = +zero
font-feature = +ss01
font-feature = +ss02
font-feature = +ss03
font-feature = +ss04
font-feature = +ss05

# Window Management
window-save-state = always
window-new-tab-position = current
window-decoration = true
window-title-font-family = "BlexMono Nerd Font"
window-padding-x = 8
window-padding-y = 8
window-padding-balance = true
window-padding-color = extend

# Terminal Behavior
shell-integration = zsh
shell-integration-features = cursor
shell-integration-features = sudo
shell-integration-features = title
clipboard-read = allow
clipboard-write = allow
copy-on-select = false
mouse-hide-while-typing = true
confirm-close-surface = false

# Cursor Configuration
cursor-style = block
cursor-style-blink = true
cursor-invert-fg-bg = true
cursor-click-to-move = true

# Scrollback
scrollback-limit = 10000
mouse-scroll-multiplier = 3

# Bell disabled (using default)

# Advanced Terminal Features
# Essential for Neovim compatibility
term = xterm-256color
title = "Ghostty"
osc-color-report-format = 8-bit

# Neovim-specific compatibility
# Enable true color support
resize-overlay = never
resize-overlay-position = center

# Performance optimizations
macos-non-native-fullscreen = true
macos-option-as-alt = true
working-directory = home
window-inherit-working-directory = true
window-inherit-font-size = true

# Keybindings - Zellij handles multiplexing, so disable Ghostty tabs/splits
# Disable tabs
keybind = cmd+t=unbind
keybind = cmd+w=unbind
keybind = cmd+shift+left=unbind
keybind = cmd+shift+right=unbind
keybind = cmd+1=unbind
keybind = cmd+2=unbind
keybind = cmd+3=unbind
keybind = cmd+4=unbind
keybind = cmd+5=unbind
keybind = cmd+6=unbind
keybind = cmd+7=unbind
keybind = cmd+8=unbind
keybind = cmd+9=unbind
keybind = cmd+0=unbind

# Disable splits
keybind = cmd+d=unbind
keybind = cmd+shift+d=unbind
keybind = cmd+h=unbind
keybind = cmd+j=unbind
keybind = cmd+k=unbind
keybind = cmd+l=unbind

# Keep essential bindings
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
# Cmd+Arrow for line navigation (Home/End)
keybind = cmd+left=csi:H
keybind = cmd+right=csi:F
keybind = cmd+equal=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+shift+0=reset_font_size
keybind = shift+enter=text:\n

# Quit app
keybind = cmd+q=quit
